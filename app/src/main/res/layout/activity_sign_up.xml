<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/backpurple3"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="300dp"
        android:layout_height="550dp"

        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346">


        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/fugaz_one"
            android:padding="10dp"
            android:shadowColor="#FF00ED"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="SIGN UP"
            android:textColor="#4A117C"
            android:textFontWeight="1000"
            android:textSize="30sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boxfill"
            android:fontFamily="@font/fugaz_one"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp"
            android:shadowColor="#BABBBF"
            android:shadowDx="4.5"
            android:shadowDy="2.3"
            android:shadowRadius="1.6"
            android:textColor="#641D5F"
            android:textFontWeight="900"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textLogin" />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boxfill"
            android:fontFamily="@font/fugaz_one"
            android:hint="Mail Id"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:shadowColor="#BABBBF"
            android:shadowDx="4.5"
            android:shadowDy="2.3"
            android:shadowRadius="1.6"
            android:textColor="#641D5F"
            android:textFontWeight="900"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/etUsername" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boxfill"
            android:fontFamily="@font/fugaz_one"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:shadowColor="#BABBBF"
            android:shadowDx="4.5"
            android:shadowDy="2.3"
            android:shadowRadius="1.6"
            android:textColor="#641D5F"
            android:textFontWeight="900"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/etMail" />

        <EditText
            android:id="@+id/etcnfPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boxfill"
            android:fontFamily="@font/fugaz_one"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:shadowColor="#BABBBF"
            android:shadowDx="4.5"
            android:shadowDy="2.3"
            android:shadowRadius="1.6"
            android:textColor="#641D5F"
            android:textFontWeight="900"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/fugaz_one"
            android:text="Already Registered"
            android:textColor="#641D5F"
            app:layout_constraintEnd_toEndOf="@id/butlogin"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etcnfPassword" />

        <Button
            android:id="@+id/butlogin"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/but"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="#C007C6"
            android:shadowDx="6.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/etcnfPassword"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/butsignup"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/but"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="#C007C6"
            android:shadowDx="6.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.94" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>