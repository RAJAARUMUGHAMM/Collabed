<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:right="1dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="0dp">

        <shape>
            <stroke android:color="#7F55A4"
                android:width="1dp"/>
            <solid android:color="#7514C9"/>
            <gradient android:type="linear" android:startColor="#FFFFFF"
                android:centerColor="#7E16DA"
                android:endColor="#FFFFFF" android:angle="0"/>
            <size android:height="40dp"
                android:width="100dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item
        android:right="0dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="0dp">

        <shape>
            <solid android:color="#FFFFFF"/>
            <gradient android:type="linear" android:startColor="#4A117C"
                android:centerColor="#94FFFFFF"
                android:endColor="#4A117C" android:angle="45"/>
            <size android:height="40dp"
                android:width="100dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>