<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenActivity"
    android:background="@drawable/backpurple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="#FF00ED"
            android:shadowDx="6.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:padding="10dp"
            android:textColor="#4A117C"
            android:textFontWeight="900"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="68dp"
            android:src="@drawable/logocollab3"
            app:layout_constraintBottom_toTopOf="@+id/butlogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/butlogin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/but"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="#C007C6"
            android:shadowDx="6.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/butsignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/butsignup"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/but"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="#C007C6"
            android:shadowDx="6.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>